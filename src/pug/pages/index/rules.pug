.rules
  .site-container
    .rules__inner
      .rules__title КЛЮЧЕВЫЕ ПРАВИЛА БЕЗОПАСНОСТИ «ТАТНЕФТЬ»
      button.rules__return.button-reset.modal__close-btn
        +icon-mono('modal-close')(class='rules__return-icon')
        //- +icon-mono('arrow-right')(class='rules__return-icon')
        //- .rules__return-text назад
    ul.rules__items
      each item in rulesItems
        li.rules__item
          img.rules__item-img(src=item.imgUrl alt='#')
          h3.rules__item-title=item.text
          .rules__item-buttons
            button.rules__item-button(data-path="modal-video")
              .rules__item-button-text Видео
              +icon-mono('arrow-left-2')(class='rules__item-button-icon')
            button.rules__item-button(data-path="modal-images")
              .rules__item-button-text плакат
              +icon-mono('arrow-left-2')(class='rules__item-button-icon')
