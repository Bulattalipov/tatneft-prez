  rulesItems = [
    {imgUrl: 'assets/images/rules/1.png', text: 'Ключевые правила безопасности'},
    {imgUrl: 'assets/images/rules/2.png', text: 'Сокрытие информации о ЧП'},
    {imgUrl: 'assets/images/rules/3.png', text: 'Работы повышенной опасности без наряда-допуска'},
    {imgUrl: 'assets/images/rules/4.png', text: 'Нарушение целостности блокировок, противоаварийной автоматической защиты'},
    {imgUrl: 'assets/images/rules/5.png', text: 'Употребление алкогольных, наркотических и токсических веществ'},
